-- cargar datos

datos = LOAD 'data.csv' USING PigStorage(',')
    AS (
            index:int,
            name:chararray,
            lastn:chararray,
            birth:chararray,
            color:chararray,
            num:int          
        ); 

color_datos = FILTER datos BY STARTSWITH(color,'b'); 

seleccionar_datos = FOREACH color_datos GENERATE name, color; 

STORE seleccionar_datos INTO 'output/' USING PigStorage(',');